// Simple Line Drawing with DDA and Bresenham (No pattern styles)
#include <GL/glut.h>
#include <cmath>
#include <iostream>

float x1_click, y1_click, x2_click, y2_click;
bool firstClick = true;
int choice = 1; // 1 = DDA, 2 = Bresenham

void setPixel(float x, float y) {
    glBegin(GL_POINTS);
    glVertex2f(x, y);
    glEnd();
}

void drawLineDDA(float x1, float y1, float x2, float y2) {
    float dx = x2 - x1;
    float dy = y2 - y1;
    float steps = std::max(std::abs(dx), std::abs(dy));
    float Xinc = dx / steps;
    float Yinc = dy / steps;
    float x = x1;
    float y = y1;
    for (int i = 0; i <= steps; i++) {
        setPixel(x, y);
        x += Xinc;
        y += Yinc;
    }
}

void drawLineBresenham(float x1, float y1, float x2, float y2) {
    float dx = std::abs(x2 - x1), dy = std::abs(y2 - y1);
    float sx = (x1 < x2) ? 1 : -1;
    float sy = (y1 < y2) ? 1 : -1;
    float err = dx - dy;
    while (true) {
        setPixel(x1, y1);
        if ((int)x1 == (int)x2 && (int)y1 == (int)y2) break;
        float e2 = 2 * err;
        if (e2 > -dy) { err -= dy; x1 += sx; }
        if (e2 < dx) { err += dx; y1 += sy; }
    }
}

void mouseClick(int button, int state, int x, int y) {
    if (button == GLUT_LEFT_BUTTON && state == GLUT_DOWN) {
        float fx = (float)(x - 250) / 250.0f;
        float fy = (float)(250 - y) / 250.0f;
        if (firstClick) {
            x1_click = fx; y1_click = fy; firstClick = false;
        } else {
            x2_click = fx; y2_click = fy; firstClick = true;
            if (choice == 1) drawLineDDA(x1_click, y1_click, x2_click, y2_click);
            else drawLineBresenham(x1_click, y1_click, x2_click, y2_click);
            glFlush();
        }
    }
}

void display() {
    glClear(GL_COLOR_BUFFER_BIT);
    glColor3f(0, 0, 0);
    glBegin(GL_LINES);
    glVertex2f(-1, 0); glVertex2f(1, 0); // X axis
    glVertex2f(0, -1); glVertex2f(0, 1); // Y axis
    glEnd();
    glFlush();
}

void keyboard(unsigned char key, int, int) {
    if (key == '1') choice = 1; // DDA
    if (key == '2') choice = 2; // Bresenham
    glutPostRedisplay();
}

void init() {
    glClearColor(1, 1, 1, 1);
    glColor3f(1, 0, 0);
    glPointSize(2);
    gluOrtho2D(-1, 1, -1, 1);
}

int main(int argc, char** argv) {
    glutInit(&argc, argv);
    glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB);
    glutInitWindowSize(500, 500);
    glutCreateWindow("Simple Line - DDA & Bresenham");
    init();
    glutDisplayFunc(display);
    glutMouseFunc(mouseClick);
    glutKeyboardFunc(keyboard);
    glutMainLoop();
    return 0;
}